<?xml version="1.0" encoding="utf-8"?>



<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d2fcfa"
    tools:context=".HomeScrolled">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/line"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:scaleType="fitXY"
        android:layout_marginEnd="215dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/line" />

    <ImageView
        android:id="@+id/self_awarness"
        android:layout_width="155dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@mipmap/self_awarness_icon"
        android:layout_marginStart="200dp"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintEnd_toEndOf="@+id/line"
        app:layout_constraintStart_toStartOf="@+id/line" />

    <ImageView
        android:id="@+id/clouds"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@mipmap/clouds"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintEnd_toStartOf="@id/self_awarness"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/self_awarness"
        android:layout_marginTop="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>